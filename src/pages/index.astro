---
import DefaultLayout from "../layouts/DefaultLayout.astro";
---

<DefaultLayout>
  <div class="flex flex-col h-full items-center justify-center">
    <h1>Hi! My name is Taj.</h1>
    <div class="flex">
      <a href="/aboutme">
        <button
          class="bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded mr-2"
        >
          About Me
        </button>
      </a>
      <a href="/contactme">
        <button
          class="bg-blue-500 hover:bg-blue-400 text-white font-bold py-2 px-4 border-b-4 border-blue-700 hover:border-blue-500 hover:border-b-0 rounded"
        >
          Contact Me
        </button>
      </a>
    </div>
  </div>
</DefaultLayout>
