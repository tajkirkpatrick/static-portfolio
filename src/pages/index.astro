---
import CTAButton from "../components/CTAButton.astro";
import OutlineButton from "../components/OutlineButton.astro";
import DefaultLayout from "../layouts/DefaultLayout.astro";
---

<DefaultLayout>
  <div class="flex flex-col h-full items-center justify-center text-center">

    <div class="space-y-6">
      <div>
        <h1 class="text-4xl">Hi! My name is Taj</h1>
        <h3>Computer Scientist from <span class="text-red-600">Houston, Texas</span>!</h3>
      </div>


      <h1>Thanks for stopping by!</h1>
    </div>

    <div class="flex my-12">
      <a href="/aboutme">
        <OutlineButton>
          About Me
        </OutlineButton>
      </a>
      <a href="/contactme">
        <CTAButton>
          Contact Me
        </CTAButton>
      </a>
    </div>
  </div>
</DefaultLayout>
